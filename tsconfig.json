{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "jsx": "react",
    "lib": ["es2018"],
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./lib/",
    "moduleResolution": "node",
    "rootDirs": ["./src/", "./stories"],
    "baseUrl": "./src",
    "paths": {
      "~/components/*": ["./components/*"],

      "~/constants/*": ["./constants/*"]
    },
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitUseStrict": true
  }
}
